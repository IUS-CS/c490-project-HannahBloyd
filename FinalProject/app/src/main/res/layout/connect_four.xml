<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/connect4board">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/col0Button"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:textSize="12sp" />

        <Button
            android:id="@+id/col1Button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:textSize="12sp" />

        <Button
            android:id="@+id/col2Button"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:textSize="12sp" />

        <Button
            android:id="@+id/col3Button"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:textSize="12sp" />

        <Button
            android:id="@+id/col4Button"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:textSize="12sp" />

        <Button
            android:id="@+id/col5Button"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:textSize="12sp" />

        <Button
            android:id="@+id/col6Button"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:textSize="12sp" />
    </LinearLayout>

    <com.example.finalproject.CFViewTesting
        android:id="@+id/cfView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <Button
        android:id="@+id/cfbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

</LinearLayout>